---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Feature One",
    description:
      "Describe your first key feature here. Focus on the benefits for your users rather than technical details.",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Feature Two",
    description:
      "Describe your second key feature here. Keep it concise and focus on how it solves a specific problem.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Feature Three",
    description:
      "Describe your third key feature here. Highlight what makes this feature unique or valuable.",
    icon: "bx:bxs-data",
  },
  {
    title: "Feature Four",
    description:
      "Describe your fourth key feature here. Explain how this feature enhances the overall experience.",
    icon: "bx:bxs-bot",
  },
  {
    title: "Feature Five",
    description:
      "Describe your fifth key feature here. Focus on tangible outcomes or results users can expect.",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Feature Six",
    description:
      "Describe your sixth key feature here. Emphasize how this feature differentiates your offering.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Key Features
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Highlight the main features or benefits of your product or service here.
    Focus on what makes your offering unique and valuable to your customers.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
